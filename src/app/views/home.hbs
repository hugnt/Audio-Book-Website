{{!-- css --}}
<link rel="stylesheet" href="css/home.css">

{{!-- main - page --}}
<section class="section-01">
    <div class="container d-flex w-90">
        <div class="left-content w-50">
            <div class="slide">
                <div class="slide-show">
                    <div class="head-banner">
                        <span class="big-title d-block">poets of the 19th century</span>
                        <span class="desc d-block">More than 300 poems</span>
                    </div>
                    <div class="w-50 img-box">
                        <img src="/img/home/slide.png" alt="">
                    </div>

                </div>
                <div class="slide-items">
                    <ul class="list-items d-flex">

                    </ul>
                </div>
            </div>
            <div class="search-box d-flex">
                <div class="typing fa-solid fa-magnifying-glass">
                    <!-- <i class="fa-solid fa-magnifying-glass"></i> -->
                    <input type="search" name="" id="" placeholder="Search">
                </div>
                <div class="category select-option">
                    <span class="title desc">Category</span>
                    <div class="btn-select  d-flex">
                        <span class="main-title">All</span>
                        <span class="btn-down fa-solid fa-chevron-down"></span>
                    </div>

                    <ul class="list-options">
                        <li class="option">Mark Twain</li>
                        <li class="option">Fyodor Tyutchev</li>
                        <li class="option">Alexander Puskin</li>
                        <li class="option">Mikhail Lermontov</li>
                        <li class="option">Karolina Pavlova</li>
                        <li class="option">Khomyakov Avtoportre</li>
                    </ul>
                </div>
                <div class="century select-option">
                    <span class="title desc">Century</span>
                    <div class="btn-select  d-flex">
                        <span class="main-title">All</span>
                        <span class="btn-down fa-solid fa-chevron-down"></span>
                    </div>

                    <ul class="list-options">
                        <li class="option">19th</li>
                        <li class="option">20th</li>
                        <li class="option">21th</li>
                    </ul>
                </div>
                <div class="btn-go">
                    <span>GO</span>
                </div>
            </div>
            <div class="last-request-box">
                <span class="desc">Last request</span>
                <ul class="list-requests">
                    {{#each books}}
                    <li class="rq-item">
                        <div class="book">
                            <span class="No desc">{{@index}}</span>
                            <img src="/img/covers/{{this.bia_sach}}" alt="" class="img-item">
                            <span class="title main-title">{{this.ten_sach}}</span>
                        </div>
                        <span class="author main-title">{{this.ten_tac_gia}}</span>
                        <span class="icon-star fa-regular fa-star-half-stroke">
                            <span class="desc">{{this.ty_le_sao}}</span>
                            <span class="rate desc">{{this.sl_danh_gia}}k Reviewers</span>
                        </span>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="right-content w-50">
            <div class="writer-zone">
                <div class="topic_writer">
                    <span class="main-topic d-block" id="pp-writer">Popular writers</span>
                    <div class="btn_s">
                        <i class="bi-move bi-arrow-left"></i>
                        <i class="bi-move bi-arrow-right"></i>
                    </div>
                </div>
                <ul class="list-writers d-flex">

                </ul>
            </div>
            <div class="book-zone">
                <span class="main-topic">Books</span>
                <div class="book-lists d-flex">
                    {{#each books}}
                    <div class="book-item" data-book="">
                        <div class="img-box"><img src="/img/covers/{{this.bia_sach}}" alt="" class="book-img"></div>
                        <span class="author desc">{{this.ten_tac_gia}}</span>
                        <span class="name main-title">{{this.ten_sach}}</span>
                        <span class="icon-star fa-regular fa-star-half-stroke">
                            <span class="desc">{{this.ty_le_sao}}</span>
                            <span class="rate desc">{{this.sl_danh_gia}}k Reviewers</span>
                        </span>

                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>


<script src="/js/home.js" type="module"></script>