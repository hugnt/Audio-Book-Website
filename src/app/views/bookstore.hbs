{{!-- css  --}}
<link rel="stylesheet" href="/css/bookstore.css">
<link rel="stylesheet" href="/css/popup.css">

{{!-- main - page  --}}
<section class="bookstore" id="#section">
    <div class="search">
        <div class="byName">
            <label for="">Please enter name of book</label>
            <input type="text" name="bookName">
        </div>
        <div class="byAuthor">
            <h1>Choose a book format</h1>
            <div class="select">
                <select>
                    <option value="0">All</option>
                    <option value="1">Mark Twain</option>
                    <option value="2">Fyodor Tyutchev</option>
                    <option value="3">Alexander Puskin</option>
                    <option value="4">Mikhail Lermontov</option>
                    <option value="5">Karolina Pavlova</option>
                    <option value="6">Khomyakov Avtoportret</option>
                </select>
            </div>
        </div>
        <div class="wrap">
            <button type="submit" class="button">Submit</button>
        </div>
    </div>

    <div class="shelves">
        <div class="cart ">
            <h2 class="cart-title">Your Cart</h2>
            <div class="cart-content">
            </div>
            <div class="total">
                <div class="total-title">Total</div>
                <div class="total-price">$0</div>
            </div>
            <button type="button" class="btn-buy">Buy Now</button>
            <i class="bi bi-x-lg " id="close-cart"></i>
        </div>
        <div class="store">
            <div class="sale">

            </div>
            <div class="bookshelves">
                <h1 class="title-product">
                    BOOKS
                </h1>
                <div class="product">
                    <ul class="listProduct">

                    </ul>
                </div>
            </div>
        </div>

    </div>
</section>
<div class="movie-card" id="movie-card">
</div>

<!-- script end movie-card -->
<script src="/js/bookstore.js"></script>
<script src="/js/vanilla-tilt.js"></script>